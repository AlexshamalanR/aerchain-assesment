# Root .env.example (copy to .env in each folder)

# ============================================
# BACKEND CONFIGURATION (.env in /backend)
# ============================================

# Server
PORT=4000
NODE_ENV=development

# Database (PostgreSQL)
# Example: postgresql://user:password@localhost:5432/rfp_db
DATABASE_URL="postgresql://user:password@localhost:5432/rfp_db"

# OpenAI API Key (get from https://platform.openai.com/api-keys)
# Model: gpt-4o or gpt-4-turbo
OPENAI_API_KEY=sk-...

# Email SMTP Configuration (Gmail example)
# For Gmail: enable App Password (https://myaccount.google.com/apppasswords)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-16-digit-app-password

# Email IMAP Configuration (for receiving proposals - optional)
IMAP_HOST=imap.gmail.com
IMAP_PORT=993
IMAP_USER=your-email@gmail.com
IMAP_PASS=your-16-digit-app-password

# Sender email address (RFP emails will be from this)
SENDER_EMAIL=noreply@yourdomain.com

# Redis (optional - for background jobs)
REDIS_URL=redis://localhost:6379

# ============================================
# FRONTEND CONFIGURATION (.env in /frontend)
# ============================================

# Backend API URL (Vite will proxy this)
VITE_API_URL=http://localhost:4000/api
