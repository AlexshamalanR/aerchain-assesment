# Backend API Configuration

# Server
PORT=4000
NODE_ENV=development

# Database (PostgreSQL)
DATABASE_URL="postgresql://user:password@localhost:5432/rfp_db"

# OpenAI / LLM
OPENAI_API_KEY=sk-...

# Email SMTP (Gmail example - use Gmail App Password)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Email IMAP (for receiving proposals)
IMAP_HOST=imap.gmail.com
IMAP_PORT=993
IMAP_USER=your-email@gmail.com
IMAP_PASS=your-app-password

# Sender email
SENDER_EMAIL=noreply@rfpsystem.com

# Redis (for background jobs - optional)
REDIS_URL=redis://localhost:6379
